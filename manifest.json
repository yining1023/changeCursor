{
  "name": "Show Coordinate",
  "manifest_version": 2,
  "description": "Show the coordinates of the cursor",
  "version": "0.2",
  "background":{
    "scripts": [
        "background.js"
      ] 
    },
  "content_scripts": [{
    "matches": [ "<all_urls>" ],
    "js": ["jquery.js", "content_script.js"],
    "css": ["style.css"]
  }],
  "browser_action":{
    "default_icon": "icon.png",
    "default_titile": "show/hide mouse coordinates"
  }
}
